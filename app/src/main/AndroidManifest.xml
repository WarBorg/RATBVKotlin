        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.bustimetables.BusTimetablesActivity"
            android:label="@string/title_activity_bus_timetables"
            android:theme="@style/NoActionBar"/>
        <activity
            android:name=".ui.busstations.BusStationsActivity"
            android:label="@string/title_activity_bus_stations" />
        <activity
            android:name=".ui.buslines.BusLinesActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>