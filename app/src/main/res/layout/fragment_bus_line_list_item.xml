<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="busLineViewModel"
            type="com.example.ratbvkotlin.ui.buslines.BusLinesViewModel.BusLineViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:onClick="@{_ -> busLineViewModel.onItemClicked()}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_buslinelistitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{busLineViewModel.busLine.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/date/day_of_week" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_buslinelistitem_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(busLineViewModel.busLine.route)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintTop_toBottomOf="@id/fragment_buslinelistitem_name"
            tools:text="@tools:sample/date/day_of_week" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
