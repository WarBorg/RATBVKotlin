<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="busStationViewModel"
            type="com.example.ratbvkotlin.ui.busstations.BusStationsViewModel.BusStationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:onClick="@{_ -> busStationViewModel.onItemClicked()}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fragment_busstationlistitem_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{busStationViewModel.busStation.name}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@tools:sample/date/day_of_week" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>